<%- include('includes/header') %>
<%- include('includes/nav') %>

<div class="container my-4">
  <%- include('includes/messages') %>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm rounded-3">
        <div class="card-body">
          <h1 class="display-5 text-center mb-4">Editar Contato</h1>

          <form action="/contato/edit/<%= contato._id %>" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label for="nome" class="form-label">Nome *</label>
              <input type="text" name="nome" id="nome" value="<%= contato.nome || '' %>" class="form-control" required>
            </div>

            <div class="mb-3">
              <label for="sobrenome" class="form-label">Sobrenome</label>
              <input type="text" name="sobrenome" id="sobrenome" value="<%= contato.sobrenome || '' %>" class="form-control">
            </div>

            <div class="mb-3">
              <label for="telefone" class="form-label">Telefone</label>
              <input type="text" name="telefone" id="telefone" value="<%= contato.telefone || '' %>" class="form-control">
            </div>

            <div class="mb-3">
              <label for="email" class="form-label">E-mail</label>
              <input type="email" name="email" id="email" value="<%= contato.email || '' %>" class="form-control">
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-success px-4">Atualizar</button>
              <a href="/contato" class="btn btn-secondary ms-2 px-4">Cancelar</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('includes/footer') %>
