<%- include('includes/header') %>
  <%- include('includes/nav') %>

    <div class="container my-5 d-flex justify-content-center">
      <div class="card shadow-sm rounded-3" style="width: 750px;">
        <div class="card-body p-4">

          <h1 class="display-5 text-center mb-4">Adicionar Contato</h1>

          <form class="contato-form" action="/contato" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <div class="mb-3">
              <label for="nome" class="form-label">Nome</label>
              <input type="text" name="nome" id="nome" value="<%= contato.nome || '' %>" class="form-control" required>
            </div>

            <div class="mb-3">
              <label for="sobrenome" class="form-label">Sobrenome</label>
              <input type="text" name="sobrenome" id="sobrenome" value="<%= contato.sobrenome || '' %>"
                class="form-control">
            </div>

            <div class="mb-3">
              <label for="telefone" class="form-label">Telefone</label>
              <input type="text" name="telefone" id="telefone" value="<%= contato.telefone || '' %>"
                class="form-control">
            </div>

            <div class="mb-3">
              <label for="email" class="form-label">E-mail</label>
              <input type="email" name="email" id="email" value="<%= contato.email || '' %>" class="form-control">
            </div>

            <div class="d-flex justify-content-center mt-4">
              <button type="submit" class="btn btn-primary px-4">Salvar</button>
            </div>

          </form>

          <script src="/assets/js/validateContato.js" defer></script>

        </div>
      </div>
    </div>

    <%- include('includes/footer') %>