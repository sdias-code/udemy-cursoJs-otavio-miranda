<%- include('includes/header') %>
<%- include('includes/nav') %>

<div class="container my-5">

  <!-- Mensagens de sucesso ou erro -->
  <div>
    <%- include('includes/messages') %>
  </div>

  <!-- Tabela de contatos -->
  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-12">

      <!-- Cabeçalho da tabela com H3 e botão alinhados -->
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="m-0 display-5 text-center flex-grow-1">Meus contatos</h1>
        <a href="contatoAdd" class="btn btn-success ms-3">
          <i class="bi bi-person-plus-fill"></i> Novo Contato
        </a>
      </div>

      <% if (contatos && contatos.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-bordered text-center align-middle table-hover">
            <thead class="table-dark">
              <tr>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>Telefone</th>
                <th>E-mail</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% contatos.forEach(c => { %>
                <tr>
                  <td><%= c.nome %></td>
                  <td><%= c.sobrenome || '-' %></td>
                  <td><%= c.telefone || '-' %></td>
                  <td><%= c.email || '-' %></td>
                  <td>
                    <div class="d-flex justify-content-center gap-2">
                      <a href="/contato/edit/<%= c._id %>" class="btn btn-sm btn-warning">Editar</a>
                      <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal"
                        data-bs-target="#confirmDeleteModal"
                        data-contato-id="<%= c._id %>"
                        data-contato-name="<%= c.nome %> <%= c.sobrenome %>">
                        Excluir
                      </button>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-center mt-3">Nenhum contato cadastrado.</p>
      <% } %>
    </div>
  </div>

  <!-- Modal de confirmação de exclusão -->
  <%- include('partial/confirmDeleteModal') %>

</div>

<%- include('includes/footer') %>
