<%- include('includes/header') %>
<%- include('includes/nav') %>

<div class="container my-5">

  <div class="row justify-content-center">
    <div class="col-lg-8">

      <h1 class="display-5 text-center mb-3">Criar conta</h1>
      <p class="text-center lead mb-4">Crie sua conta abaixo:</p>

      <!-- Inclui mensagens de erro e sucesso -->
      <%- include('includes/messages') %>

      <form action="/register" method="POST" class="border rounded p-4 shadow-sm bg-light">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <div class="mb-3">
          <label for="email" class="form-label">E-mail</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu e-mail" required>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Senha</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Digite sua senha" required>
        </div>

        <button type="submit" class="btn btn-primary w-100">Criar conta</button>
      </form>

      <div class="text-center mt-4">
        <p>JÃ¡ tem conta? <a href="/login">Clique aqui</a> para entrar.</p>
      </div>

    </div>
  </div>
</div>

<%- include('includes/footer') %>
